{
    "compilerOptions": {
        "lib": [
          "dom",
          "es2015.promise",
          "es5",
          "es7"
        ],
        "target": "es5",
        "module": "commonjs",
        "importHelpers": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
